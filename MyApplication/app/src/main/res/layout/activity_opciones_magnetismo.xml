<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpcionesMagnetismo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgBtn_volver"
                    android:layout_width="8dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="Volver"
                    app:srcCompat="@drawable/volver" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:scaleX="1.8"
                    android:scaleY="1.8"
                    android:text="Magnetismo" />

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    app:srcCompat="@android:drawable/sym_def_app_icon" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_flujo"
                android:layout_width="360dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Flujo Magnético" />

            <Button
                android:id="@+id/btn_ley_ampere"
                android:layout_width="360dp"
                android:layout_height="65dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Ley Ampere" />

            <Button
                android:id="@+id/btn_formulas"
                android:layout_width="360dp"
                android:layout_height="65dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Formulas" />

            <Button
                android:id="@+id/btn_fm_carga"
                android:layout_width="360dp"
                android:layout_height="65dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Fuerza magnética en una carga" />

            <Button
                android:id="@+id/btn_fm_corriente"
                android:layout_width="360dp"
                android:layout_height="65dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="F. M sobre corriente en un campo B" />

            <Button
                android:id="@+id/btn_bobinas"
                android:layout_width="360dp"
                android:layout_height="65dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Helm-Holtz" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>